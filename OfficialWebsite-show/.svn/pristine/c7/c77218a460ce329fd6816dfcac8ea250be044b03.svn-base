    <style>
        body {
            min-width: 1280px;
        }

        .videoDiv {
            width: 100%;
            min-width: 1480px;
            height: 809px;
        }

        .video {
            object-fit: fill;
            width: 100%;
            height: 100%;
        }

        .introduce {
            width: 100%;
            text-align: center;
        }

        .headImage {
            width: 50%;
            margin: auto;
            margin-top: 71px;
            margin-bottom: 74px;

        }

        .headImage img {}

        .labelText {
            font-size: 20px;
            /* font-weight: 800; */
            color: #33a2e8;
        }

        .labelText {
            margin-right: 28px;
        }

        .itemText {
            width: 85%;
            margin-left: 10%;
            margin-bottom: 56px;
            display: flex;
            opacity: 0;
            transition: 1.5s;
            position: relative;
            top: 100px;
        }

        .mainText {
            text-indent: 2em;
            text-align: left;
            color: #1a1919;
        }

        .loderText {
            width: 100%;
            height: 200px;
            opacity: 0;
            transition: 1s;
        }

        .loderBtn {
            margin: auto;
            width: 300px;
            height: 68px;
            background-color: #2daefe;
            border-radius: 40px 40px 40px 40px;
            text-align: center;
            margin-top: 90px;
        }

        .loderSpan {
            font-size: 14pt;
            color: #fff;
            line-height: 68px;
        }

        .loderBtn:hover {
            background-image: linear-gradient(to right, #2fb3fe, #3acfff)
        }

        .itemText-list {
            position: relative;
        }
    </style>
</head>

