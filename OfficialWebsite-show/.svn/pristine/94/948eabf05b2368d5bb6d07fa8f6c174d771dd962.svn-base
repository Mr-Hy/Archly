body {
    background-color: #f8f9f9;
    /* overflow-x: hidden; */
    position: absolute;
}

.videoDiv {
    width: 100%;
    min-width: 1480px;
    height: 809px;
}

.video {
    -o-object-fit: fill;
    object-fit: fill;
    height: 100%;   
}


/* 展示列表 */

.productFirst {
    position: relative;
    /* width: 100%; */
    top: 0vw;
}

.titelLogImg {
    margin-top: 68px;
    margin-left: 850px;
}

/* .titelLogImg img {
    width: 10vw;
} */

.productList {
    width: 100%;
    min-width: 1280px;
    position: relative;
    margin-top: 130px;
}

.productItem-left {
    width: 100%;
    position: relative;
}

.firstImage {
    position: absolute;
    /* width: 43vw; */
    left: 0px;
    top: 0px;
    opacity: 0;
    -webkit-transition: 1s;
    -o-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
    cursor: pointer;
}

.firstImageShade {
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.firstImage:hover {
    top: -10px;
    -webkit-transition: 0.5s;
    -o-transition: 0.5s;
    -moz-transition: 0.5s;
    transition: 0.5s;
}


/* .firstImage img {
    width: 100%;
} */

.firstText {
    width: 555px;
    position: absolute;
    left: 1400px;
    opacity: 0;
    -webkit-transition: 1s;
    -o-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
}

.iconText {
    width: 333px;
    text-align: center;
    position: relative;
    left: 150px;
    top: 40px
}

.firstIcon {
    width: 90px;
    height: 90px;
    cursor: pointer;
    -webkit-transition: 0.5s;
    -o-transition: 0.5s;
    -moz-transition: 0.5s;
    transition: 0.5s;
    margin: auto;
    position: relative;
    top: 15px;
}


.firstIcon:hover {
    top: 10px;
}

.firstIcon>img {
    width: 100%;
    height: 100%;
}

.AboutImg-left {
    /* width: 20vw; */
    position: absolute;
    top: -40px;
    left: 30px;
}


.firstHeadline {
    margin: auto;
    margin-top: 40px;
    font-size: 28px;
    font-weight: 700;
    font-family: 'Source Han Sans CN';
    color: #000000;
}

.firstTxt {
    position: absolute;
    top: 230px;
    text-align: left;
    font-size: 16px;
    letter-spacing: 1px;
    text-indent: 40px;
    line-height: 40px;
    font-family: 'Source Han Sans CN';
    color: #000000;
    width: 550px;
}

.firstBackImg {
    position: absolute;
    top: 118px;
    width: 100%;
    height: 400px;
    z-index: -1;
    opacity: 0;
    -webkit-transition: 2s;
    -o-transition: 2s;
    -moz-transition: 2s;
    transition: 2s;
}

/* .firstBackImg img {
    width: 100%;
    height: 100%;
} */



/* 右边 */
.productSecond {
    position: relative;
}

.secondImage {
    /* width: 43vw; */
    position: absolute;
    left: 1040px;
    top: 0px;
    opacity: 0;
    -webkit-transition: 1s;
    -o-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
    cursor: pointer;
}

.secondImage:hover {
    top: -10px;
    -webkit-transition: 0.5s;
    -o-transition: 0.5s;
    -moz-transition: 0.5s;
    transition: 0.5s;
}

/* .secondImage img {
    width: 100%;
} */

.secondText {
    width: 555px;
    left: 100px;
    position: absolute;
    -webkit-transition: 1s;
    -o-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
    opacity: 0;
}

.AboutImg-right {
    /* width: 20vw; */
    position: absolute;
    top: -40px;
    left: 30px;
}

/* .AboutImg-right>img {
    width: 100%;
} */

.iconText-02 {
    width: 333px;
    height: 100px;
    text-align: center;
    position: relative;
    top: 55px
}

.secondIcon {
    width: 90px;
    height: 90px;
    cursor: pointer;
    -webkit-transition: 0.5s;
    -o-transition: 0.5s;
    -moz-transition: 0.5s;
    transition: 0.5s;
    margin: auto;
    position: relative;
    top: 0;
}

.secondIcon:hover {
    top: -5px;
}


.secondIcon>img {
    width: 100%;
    height: 100%;
}

.secondHeadline {
    font-size: 28px;
    font-weight: 700;
    font-family: 'Source Han Sans CN';
    color: #000000;
    margin-top: 30px;
}

.secondTxt {
    position: absolute;
    top: 230px;
    text-align: left;
    font-size: 16px;
    letter-spacing: 1px;
    text-indent: 40px;
    line-height: 40px;
    font-family: 'Source Han Sans CN';
    color: #000000;
    width: 550px;

}

/* icon图标点击展示 */
.Icon-backImg {
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    position: fixed;
    overflow: auto;
    display: none;
    cursor: pointer;
}

.Icon-backImg::-webkit-scrollbar {
    display: none
}

.showImage {
    width: 52%;
    margin: 0 auto;
    margin-top: 100px;
    position: relative;
}

.showImage img {
    width: 100%;
}

.closeDiv {
    width: 6%;
    height: 3%;
    position: absolute;
    top: 0%;
    left: 47.5vw;
    background-color: red;
    z-index: 99999;
    cursor: pointer;
    opacity: 0;
}